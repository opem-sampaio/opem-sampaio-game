<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/hud_main"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_gravity="end"
	android:clipChildren="false">
    <LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
    	xmlns:app="http://schemas.android.com/apk/res-auto"
    	xmlns:tools="http://schemas.android.com/tools"
    	android:id="@+id/bg_all"
    	android:layout_width="match_parent"
	    android:layout_height="match_parent"
    	android:orientation="vertical">
	    <LinearLayout
			android:id="@+id/bg_logo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingTop="10dp"
			android:gravity="right|center_vertical"
			android:orientation="horizontal"
			android:layout_gravity="right">
			<LinearLayout
				android:id="@+id/linear6"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="right|center_vertical"
				android:orientation="vertical"
				android:layout_gravity="right">
				<LinearLayout
					android:id="@+id/linear11"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingRight="5dp"
					android:gravity="right|center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imageview4"
						android:layout_width="15dp"
						android:layout_height="15dp"
						android:src="@drawable/ic_pin_drop_white"
						android:scaleType="fitXY" />
					<TextView
						android:id="@+id/textview1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="| Los santos"
						android:textSize="12sp"
						android:textColor="#FFFFFF" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/linear10"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingRight="5dp"
					android:gravity="right|center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="5dp"
						android:text="00 Hz"
						android:textSize="12sp"
						android:textColor="#FFFFFF" />
					<ImageView
						android:id="@+id/imageview2"
						android:layout_width="15dp"
						android:layout_height="15dp"
						android:layout_marginRight="3dp"
						android:src="@drawable/ic_mic_white"
						android:scaleType="fitXY" />
					<TextView
						android:id="@+id/textview4"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Medio"
						android:textSize="12sp"
						android:textColor="#FFFFFF" />
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/bg_fist"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:translationX="500.0dp">
			<LinearLayout
				android:id="@+id/bg_fist_dentro"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/fist_icon"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:src="@drawable/fist"
					android:scaleType="fitXY"
					android:rotation="332" />
				<TextView
					android:id="@+id/name_fist"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="3dp"
					android:text="Fist"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#FFFFFF" />
			</LinearLayout>
			<TextView
				android:id="@+id/weapon_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingTop="8dp"
				android:paddingRight="8dp"
				android:paddingBottom="8dp"
				android:text="50"
				android:textSize="25sp"
				android:textStyle="bold"
				android:textColor="#FFFFFF" />
		</LinearLayout>
		<ImageView
			android:id="@+id/logo"
			android:layout_width="wrap_content"
			android:layout_height="50dp"
			android:src="@drawable/logo"
			android:scaleType="fitXY"
			android:translationX="-20.0dp"
			android:translationY="-140.0dp"
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_weight="1" />
		<LinearLayout
			android:id="@+id/linear4"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:gravity="right|bottom"
			android:orientation="horizontal"
			android:layout_weight="1">
			<FrameLayout
				android:id="@+id/bg_sede"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<ProgressBar
					android:id="@+id/progressbar_sede"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:rotation="270"
					android:progress="95"
					android:indeterminate="false"
					style="?android:progressBarStyleHorizontal"
					android:progressDrawable="@drawable/progress_sede" />
				<ImageView
					android:id="@+id/sede"
					android:layout_width="15dp"
					android:layout_height="15dp"
					android:src="@drawable/default_image"
					android:scaleType="fitXY"
					android:layout_gravity="center_horizontal|center_vertical" />
			</FrameLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/bg_hud_vida_fome_sede"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:gravity="right|center_vertical"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/progressBarContainer"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="3dp"
				android:paddingTop="8dp"
				android:paddingBottom="8dp"
				android:gravity="right|center_vertical"
				android:orientation="horizontal"
				android:layout_weight="1"
				android:weightSum="10">
				<View
					android:id="@+id/icon_4"
					android:layout_width="10dp"
					android:layout_height="30dp"
					android:layout_marginRight="3dp"
					android:padding="8dp"
					android:orientation="vertical"
					android:rotation="8"
					android:background="@drawable/background_progress_vida" />
				<View
					android:id="@+id/icon_5"
					android:layout_width="10dp"
					android:layout_height="30dp"
					android:layout_marginRight="3dp"
					android:padding="8dp"
					android:orientation="vertical"
					android:rotation="8"
					android:background="@drawable/background_progress_vida" />
				<View
					android:id="@+id/icon_10"
					android:layout_width="10dp"
					android:layout_height="30dp"
					android:layout_marginRight="3dp"
					android:padding="8dp"
					android:orientation="vertical"
					android:rotation="8"
					android:background="@drawable/background_progress_vida" />
				<View
					android:id="@+id/icon_6"
					android:layout_width="10dp"
					android:layout_height="30dp"
					android:layout_marginRight="3dp"
					android:padding="8dp"
					android:orientation="vertical"
					android:rotation="8"
					android:background="@drawable/background_progress_vida" />
				<View
					android:id="@+id/icon_8"
					android:layout_width="10dp"
					android:layout_height="30dp"
					android:layout_marginRight="3dp"
					android:padding="8dp"
					android:orientation="vertical"
					android:rotation="8"
					android:background="@drawable/background_progress_vida" />
				<View
					android:id="@+id/icon_9"
					android:layout_width="10dp"
					android:layout_height="30dp"
					android:layout_marginRight="3dp"
					android:padding="8dp"
					android:orientation="vertical"
					android:rotation="8"
					android:background="@drawable/background_progress_vida" />
				<View
					android:id="@+id/icon_7"
					android:layout_width="10dp"
					android:layout_height="30dp"
					android:layout_marginRight="3dp"
					android:padding="8dp"
					android:orientation="vertical"
					android:rotation="8"
					android:background="@drawable/background_progress_vida" />
				<View
					android:id="@+id/icon_3"
					android:layout_width="10dp"
					android:layout_height="30dp"
					android:layout_marginRight="3dp"
					android:padding="8dp"
					android:orientation="vertical"
					android:rotation="8"
					android:background="@drawable/background_progress_vida" />
				<View
					android:id="@+id/icon_1"
					android:layout_width="10dp"
					android:layout_height="30dp"
					android:layout_marginRight="3dp"
					android:padding="8dp"
					android:orientation="vertical"
					android:rotation="8"
					android:background="@drawable/background_progress_vida" />
				<View
					android:id="@+id/icon_2"
					android:layout_width="10dp"
					android:layout_height="30dp"
					android:layout_marginRight="3dp"
					android:padding="8dp"
					android:orientation="vertical"
					android:rotation="8"
					android:background="@drawable/background_progress_vida" />
			</LinearLayout>
			<FrameLayout
				android:id="@+id/bg_vida"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:layout_marginLeft="5dp"
				android:layout_marginRight="5dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<ProgressBar
					android:id="@+id/progressbar_vida"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:rotation="270"
					android:progress="100"
					android:indeterminate="false"
					style="?android:progressBarStyleHorizontal"
					android:progressDrawable="@drawable/progress_vida" />
				<ImageView
					android:id="@+id/vida"
					android:layout_width="15dp"
					android:layout_height="15dp"
					android:src="@drawable/default_image"
					android:scaleType="fitXY"
					android:layout_gravity="center_horizontal|center_vertical" />
			</FrameLayout>
			<FrameLayout
				android:id="@+id/bg_fome"
				android:layout_width="35dp"
				android:layout_height="35dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<ProgressBar
					android:id="@+id/progressbar_fome"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:rotation="270"
					android:progress="75"
					android:indeterminate="false"
					style="?android:progressBarStyleHorizontal"
					android:progressDrawable="@drawable/progress_fome" />
				<ImageView
					android:id="@+id/fome"
					android:layout_width="15dp"
					android:layout_height="15dp"
					android:src="@drawable/default_image"
					android:scaleType="fitXY"
					android:layout_gravity="center_horizontal|center_vertical" />
			</FrameLayout>
		</LinearLayout>	
    </LinearLayout>
</FrameLayout>
